<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MembershipWithdrawalActivity">

    <ImageButton
        android:id="@+id/withdrawalbackBtn"
        android:layout_width="7dp"
        android:layout_height="14dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="67dp"
        android:background="@color/white"
        android:padding="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/backbtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageButton>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:textSize="16dp"
        android:text="회원탈퇴"
        android:fontFamily="@font/npsfont_regular"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="102dp"
        android:layout_marginEnd="104dp"
        android:fontFamily="@font/npsfont_bold"
        android:text="윤00님\n서비스를 탈퇴하시겠습니까?"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="328dp"
        android:layout_height="72dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="16dp"
        android:text="회원 탈튀 후,입력하신 모든 개인정보는 완전히\n삭제됩니다.삭제된 정보는 되돌릴 수 없으니,신중\하게 선택해 주세요."
        android:lineSpacingExtra="5dp"
        android:textSize="16dp"
        android:fontFamily="@font/npsfont_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"></TextView>


    <TextView
        android:id="@+id/textView4"
        android:layout_width="266dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="78dp"
        android:fontFamily="@font/npsfont_regular"
        android:text="떠나시는 이유를 자유롭게 작성해주세요."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

    </TextView>


    <EditText
        android:id="@+id/etFeedback"
        android:layout_width="328dp"
        android:layout_height="149dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="16dp"
        android:background="#EEEEEE"
        android:focusable="true"
        android:gravity="top"
        android:hint="소중한 피드백을 통해\n더 나은 서비스를 제공해드릴 수 있어요."
        android:fontFamily="@font/npsfont_regular"
        android:lineSpacingExtra="5dp"
        android:inputType="textMultiLine"
        android:padding="16dp"
        android:textColor="@android:color/black"
        android:textColorHint="@color/grayscale_07"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/withdrawalButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="29dp"
        android:background="@drawable/solid_red"
        android:fontFamily="@font/npsfont_regular"
        android:text="회원탈퇴"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>