<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnboardingActivity"
    android:background="@color/blue">

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="126dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="592dp"
        android:background="@color/blue"
        android:textColor="@color/white"
        android:text="당신의 학습의 경각심을 불러일으키다!"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" >
    </TextView>

    <TextView
        android:id="@+id/text2"
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginEnd="123dp"
        android:textColor="@color/white"
        android:background="@color/blue"
        android:text="공각심"
        android:textSize="36dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/text1">
    </TextView>

    <!-- 아래에 위치할 이미지 -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="82dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="82dp"
        android:background="@color/blue"
        android:src="@drawable/mainlogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text2">

    </ImageView>

    <ImageButton
        android:id="@+id/kakaologin"
        android:layout_width="328dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="101dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/solid_button_kakao"
        android:scaleType="centerCrop"
        android:scrollbarSize="13dp"
        android:src="@drawable/kakaologin1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo">

    </ImageButton>

    <ImageButton
        android:id="@+id/naverlogin"
        android:layout_width="328dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/solid_button_naver"
        android:scaleType="centerCrop"
        android:src="@drawable/naverlogin1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kakaologin">

    </ImageButton>


    <ImageButton
        android:id="@+id/googlelogin"
        android:layout_width="328dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/solid_button_google"
        android:scaleType="centerCrop"
        android:src="@drawable/googlelogin1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/naverlogin">

    </ImageButton>

