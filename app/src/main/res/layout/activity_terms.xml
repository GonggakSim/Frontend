<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".TermsActivity">

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="126dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="592dp"
        android:background="@color/blue"
        android:textColor="@color/white"
        android:text="당신의 학습의 경각심을 불러일으키다!"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" >
    </TextView>

    <TextView
        android:id="@+id/text2"
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginEnd="123dp"
        android:textColor="@color/white"
        android:background="@color/blue"
        android:text="공각심"
        android:textSize="36dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/text1">
    </TextView>

    <!-- 아래에 위치할 이미지 -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="82dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="82dp"
        android:background="@color/blue"
        android:src="@drawable/mainlogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text2">

    </ImageView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="335dp"
        android:layout_marginBottom="1dp"
        android:background="#F5F5F5"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- 제목 -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="약관동의"
            android:fontFamily="@font/npsfont_regular"
            android:textColor="#000000"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="21dp">

            <!-- 체크박스: 전체 동의 -->
            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/checkAll"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:text="전체동의"
                android:fontFamily="@font/npsfont_regular"
                android:textColor="#000000"
                android:textSize="16sp" />


        </LinearLayout>

        <!-- 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="8dp"
            android:background="#DDDDDD" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- 체크박스: 이용약관 동의 -->
            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/checkTerms"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:fontFamily="@font/npsfont_regular"
                android:text="이용약관 동의 (필수)"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/checkServiceBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:src="@drawable/btnnext">

            </ImageButton>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- 체크박스: 개인정보 수집 및 이용 -->

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/checkPrivacy"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:fontFamily="@font/npsfont_regular"
                android:text="개인정보 수집 및 이용 동의 (필수)"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/checkPrivacyBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:src="@drawable/btnnext">

            </ImageButton>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!-- 체크박스: 푸시 알림 -->
            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/checkPush"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:fontFamily="@font/npsfont_regular"
                android:text="푸시 알림 수신 동의 (선택)"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/checkPushBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:src="@drawable/btnnext">

            </ImageButton>

        </LinearLayout>

        <!-- 확인 버튼 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/confirmButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:enabled="false"
            android:text="확인"
            android:textSize="14dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/solid_button_next" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>