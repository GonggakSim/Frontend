<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/alf_icon"
        android:layout_width="96dp"
        android:layout_height="109dp"
        android:src="@drawable/in_app_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="220dp"
        android:layout_marginStart="5dp"/>

    <ImageView
        android:id="@+id/loading_1"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:src="#626262"
        app:layout_constraintCircleRadius="90dp"
        app:layout_constraintStart_toStartOf="@id/alf_icon"
        app:layout_constraintTop_toBottomOf="@id/alf_icon"
        android:layout_marginTop="34dp"/>

    <ImageView
        android:id="@+id/loading_2"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:src="#ACACAC"
        app:layout_constraintStart_toEndOf="@id/loading_1"
        app:layout_constraintTop_toBottomOf="@id/alf_icon"
        android:layout_marginTop="34dp"
        android:layout_marginStart="17dp"/>

    <ImageView
        android:id="@+id/loading_3"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:src="#ACACAC"
        app:layout_constraintStart_toEndOf="@id/loading_2"
        app:layout_constraintTop_toBottomOf="@id/alf_icon"
        android:layout_marginTop="34dp"
        android:layout_marginStart="17dp"/>

    <TextView
        android:id="@+id/loading_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="입력하신 정보를 분석중이에요."
        android:fontFamily="@font/npsfont_regular"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loading_1"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="잠시만 기다려주세요."
        android:fontFamily="@font/npsfont_regular"
        android:textColor="#999592"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loading_string"
        android:layout_marginTop="10dp"/>
    

</androidx.constraintlayout.widget.ConstraintLayout>