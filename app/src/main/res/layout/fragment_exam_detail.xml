<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayscale_01">

    <!-- 카테고리 -->
    <TextView
        android:id="@+id/exam_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="20sp"
        android:textColor="@color/grayscale_10"
        android:fontFamily="@font/npsfont_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp" />

    <!-- 구분선 -->
    <View
        android:id="@+id/category_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grayscale_04"
        app:layout_constraintTop_toBottomOf="@id/exam_category"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- 시험 이름 -->
    <TextView
        android:id="@+id/exam_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/grayscale_10"
        android:fontFamily="@font/npsfont_extrabold"
        app:layout_constraintTop_toBottomOf="@id/category_divider"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp" />

    <!-- 응시자격 카드 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/qualification_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/exam_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/npsfont_regular"
                android:text="응시자격"
                android:textColor="@color/grayscale_08"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/exam_qualification"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/exam_qualification"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="176dp"
                android:fontFamily="@font/npsfont_bold"
                android:textColor="@color/main_02"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/exam_qualification_detail"
                android:layout_width="242dp"
                android:layout_height="17dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/npsfont_regular"
                android:textColor="@color/grayscale_08"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.99"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/exam_qualification" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- 시험 정보 카드 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/exam_info_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/qualification_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <!-- 시험과목 -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/npsfont_regular"
                android:text="시험과목"
                android:textColor="@color/grayscale_08"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/exam_subjects"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/exam_subjects"
                android:layout_width="217dp"
                android:layout_height="90dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/npsfont_regular"
                android:gravity="start"
                android:textColor="@color/grayscale_10"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/npsfont_regular"
                android:text="출제형태"
                android:textColor="@color/grayscale_08"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/exam_question_format"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/exam_subjects" />

            <TextView
                android:id="@+id/exam_question_format"
                android:layout_width="219dp"
                android:layout_height="46dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/npsfont_regular"
                android:gravity="start"
                android:textColor="@color/grayscale_10"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/exam_subjects" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/npsfont_regular"
                android:text="시험시간"
                android:textColor="@color/grayscale_08"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/exam_duration"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/exam_question_format" />

            <TextView
                android:id="@+id/exam_duration"
                android:layout_width="220dp"
                android:layout_height="37dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/npsfont_regular"
                android:gravity="start"
                android:textColor="@color/grayscale_10"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/exam_question_format" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/npsfont_regular"
                android:text="합격기준"
                android:textColor="@color/grayscale_08"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/exam_passing_criteria"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/exam_duration" />

            <TextView
                android:id="@+id/exam_passing_criteria"
                android:layout_width="221dp"
                android:layout_height="55dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/npsfont_regular"
                android:gravity="start"
                android:textColor="@color/grayscale_10"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/exam_duration" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/npsfont_regular"
                android:text="수험료"
                android:textColor="@color/grayscale_08"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/exam_fee"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/exam_passing_criteria" />

            <TextView
                android:id="@+id/exam_fee"
                android:layout_width="220dp"
                android:layout_height="29dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/npsfont_regular"
                android:gravity="start"
                android:textColor="@color/grayscale_10"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/exam_passing_criteria" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/npsfont_regular"
                android:text="합격발표"
                android:textColor="@color/grayscale_08"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/exam_announcement"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/exam_fee" />

            <TextView
                android:id="@+id/exam_announcement"
                android:layout_width="222dp"
                android:layout_height="39dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/npsfont_regular"
                android:gravity="start"
                android:textColor="@color/grayscale_10"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/exam_fee" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/exam_info_card"
        app:layout_constraintVertical_bias="0.578">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_check_schedule"
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:layout_weight="1"
            android:backgroundTint="@color/main_01"
            android:fontFamily="@font/npsfont_regular"
            android:text="시험일정 확인하기"
            android:textColor="@color/white"
            android:textSize="17sp"
            app:cornerRadius="14dp" />

        <View
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_exam_suggestion"
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:layout_weight="1"
            android:backgroundTint="@color/main_01"
            android:fontFamily="@font/npsfont_regular"
            android:text="시험일정 추천받기"
            android:textColor="@color/white"
            android:textSize="17sp"
            app:cornerRadius="14dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
