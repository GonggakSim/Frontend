<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayscale_01"
    tools:context=".TestFragment">

    <!-- 상단 제목 -->
    <TextView
        android:id="@+id/title_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="공각심"
        android:textColor="@color/grayscale_10"
        android:textSize="24sp"
        android:fontFamily="@font/npsfont_bold"
        android:gravity="center"
        android:paddingTop="50dp"
        android:paddingBottom="18dp"
        android:background="@color/grayscale_01"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/search_layout"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/search_background"
        android:elevation="2dp"
        android:paddingHorizontal="12dp"
        app:layout_constraintTop_toBottomOf="@id/title_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp">

        <!-- 화살표 아이콘 -->
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/btn_arrow_left"
            android:contentDescription="뒤로가기"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.5" />

        <!-- 검색창 -->
        <EditText
            android:id="@+id/search_bar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="시험명을 입력하세요"
            android:background="@android:color/transparent"
            android:paddingHorizontal="12dp"
            android:imeOptions="actionSearch"
            android:textSize="14sp"
            android:textColor="@color/grayscale_08"
            android:fontFamily="@font/npsfont_regular"
            android:focusable="false"
            android:clickable="true"
            app:layout_constraintStart_toEndOf="@id/back_button"
            app:layout_constraintEnd_toStartOf="@id/search_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.5" />

        <!-- 검색 아이콘 -->
        <ImageView
            android:id="@+id/search_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/btn_search"
            android:contentDescription="검색"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.5" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/recent_search_chip_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:chipSpacingHorizontal="8dp"
        app:layout_constraintTop_toBottomOf="@id/search_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 자동완성 RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:background="@color/grayscale_01"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/recent_search_chip_group"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/category_scroll_view" />

    <!-- 카테고리 버튼 -->
    <HorizontalScrollView
        android:id="@+id/category_scroll_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/grayscale_01"
        android:paddingVertical="8dp"
        app:layout_constraintTop_toBottomOf="@id/search_recycler_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Category Buttons -->
            <TextView
                android:id="@+id/category_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전체"
                android:textColor="@color/main_02"
                android:textSize="18sp"
                android:layout_marginHorizontal="12dp"
                android:fontFamily="@font/npsfont_bold"
                android:background="@drawable/selected_category_background" />

            <TextView
                android:id="@+id/category_it"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전산"
                android:textColor="@color/grayscale_08"
                android:textSize="18sp"
                android:layout_marginHorizontal="12dp"
                android:fontFamily="@font/npsfont_bold" />

            <TextView
                android:id="@+id/category_english"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="어학(영)"
                android:textColor="@color/grayscale_08"
                android:textSize="18sp"
                android:layout_marginHorizontal="12dp"
                android:fontFamily="@font/npsfont_bold" />

            <TextView
                android:id="@+id/category_japanese"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:fontFamily="@font/npsfont_bold"
                android:text="어학(중/일)"
                android:textColor="@color/grayscale_08"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/category_design"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="디자인"
                android:textColor="@color/grayscale_08"
                android:textSize="18sp"
                android:layout_marginHorizontal="12dp"
                android:fontFamily="@font/npsfont_bold" />

            <TextView
                android:id="@+id/category_accounting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회계/재무"
                android:textColor="@color/grayscale_08"
                android:textSize="18sp"
                android:layout_marginHorizontal="12dp"
                android:fontFamily="@font/npsfont_bold" />

            <TextView
                android:id="@+id/category_management"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="경영/경제"
                android:textColor="@color/grayscale_08"
                android:textSize="18sp"
                android:layout_marginHorizontal="12dp"
                android:fontFamily="@font/npsfont_bold" />

            <TextView
                android:id="@+id/category_it_advanced"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전산/IT"
                android:textColor="@color/grayscale_08"
                android:textSize="18sp"
                android:layout_marginHorizontal="12dp"
                android:fontFamily="@font/npsfont_bold" />

            <TextView
                android:id="@+id/category_logistics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="물류/유통"
                android:textColor="@color/grayscale_08"
                android:textSize="18sp"
                android:layout_marginHorizontal="12dp"
                android:fontFamily="@font/npsfont_bold" />

            <TextView
                android:id="@+id/category_others"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기타"
                android:textColor="@color/grayscale_08"
                android:textSize="18sp"
                android:layout_marginHorizontal="12dp"
                android:fontFamily="@font/npsfont_bold" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- 카테고리 밑줄 -->
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/grayscale_02"
        app:layout_constraintTop_toBottomOf="@id/category_scroll_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/exam_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/grayscale_02"
        android:fadeScrollbars="false"
        android:padding="8dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@id/btn_input_exam"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/category_scroll_view"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btn_input_exam"
        android:layout_width="350dp"
        android:layout_height="67dp"
        android:backgroundTint="@color/main_01"
        android:fontFamily="@font/npsfont_bold"
        android:gravity="center"
        android:text="시험정보 직접 입력"
        android:textColor="@color/grayscale_01"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="90dp" />

</androidx.constraintlayout.widget.ConstraintLayout>