<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_calender_day_item"
    android:orientation="vertical"
    android:gravity="center">
    
    <TextView
        android:id="@+id/fragment_calender_dayTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="5dp"
        android:text="0"
        android:textSize="12sp"
        android:fontFamily="@font/npsfont_regular"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="26dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_calender_dayTv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="1dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_line_mid_1"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="@drawable/task_line_mid"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/item_line_mid_2"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="@drawable/task_line_mid"
            android:visibility="gone"
            android:layout_marginTop="2dp"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>