    <com.google.android.material.card.MaterialCardView
        android:id="@+id/fragment_calendar_day_eventCv1"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_calender_dayTv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="3dp"
        android:backgroundTint="#A769F2"
        android:visibility="gone">

        <TextView
            android:id="@+id/fragment_calendar_day_eventTv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="토익"
            android:textSize="8sp"
            android:fontFamily="@font/npsfont_regular"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"/>
    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/fragment_calendar_day_eventCv2"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_calendar_day_eventCv1"
