<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/test_noti_design"
    android:gravity="center"
    android:minWidth="300dp"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/apptitle_ox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/npsfont_bold"
        android:gravity="center"
        android:text="공각심"
        android:textColor="@color/chip_selected_color" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/npsfont_bold"
        android:gravity="center"
        android:text="받아적기"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/testname_ox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/npsfont_bold"
        android:gravity="center"
        android:text="sample_test_name"
        android:textColor="#535353" />

    <TextView
        android:id="@+id/quiz_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/test_noti_rect"
        android:fontFamily="@font/npsfont_regular"
        android:lineSpacingExtra="8sp"
        android:padding="16sp"
        android:text="관계형 데이터베이스는 데이터를 테이블 형식으로 저장한다"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/dictateHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/line_md_pencil"
        android:drawablePadding="5sp"
        android:fontFamily="@font/npsfont_bold"
        android:gravity="center"
        android:text="위 문장을 똑같이 받아적으세요"
        android:textColor="#535353" />

    <EditText
        android:id="@+id/dictText"
        android:layout_width="349dp"
        android:layout_height="108dp"
        android:background="@drawable/test_noti_rect"
        android:ems="10"
        android:fontFamily="@font/npsfont_regular"
        android:inputType="text"
        android:text="입력" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#B7CCF5"
            android:fontFamily="@font/npsfont_regular"
            android:text="확인"
            android:textColor="#4A85FB"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>